# Zotero API Configuration
# Copy this file to .env and fill in your actual credentials

# Your Zotero User ID (found in your profile URL: https://www.zotero.org/username/USER_ID)
ZOTERO_LIBRARY_ID=your_user_id_here

# Your Zotero API Key (get from: https://www.zotero.org/settings/keys)
ZOTERO_API_KEY=your_api_key_here

# Library type: 'user' for personal library, 'group' for group library
ZOTERO_LIBRARY_TYPE=user

# Optional: Default output directory for exports
DEFAULT_OUTPUT_DIR=output

# Optional: Default limit for API requests (leave empty for no limit)
DEFAULT_LIMIT=
